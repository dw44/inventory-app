<div class="container my-5">
  <h1><%= title %> </h1>
  <h2><%= company.name %> </h2>
  <% if (systems.length > 0) { %>
    <div class="mx-4 px-4 py-2">
      <h2>You need to delete the entries for the following systems before you can delete this manufacturer's entry:</h2>
    </div>
    <% Object.keys(systems).forEach(key => { %>
      <div class="card mb-2 px-3 py-3">
        <h3 class="mx-2 my-2"><%= company.name %> - <%= systems[key].name %></h3>
      </div>
    <% }) %>
  <% } else { %>
    <form action="" method="POST">
      <div class="form-group">
        <input type="hidden" id="id" name="id" class="form-control" value="<%= company._id %>" required>
      </div>
      <div class="form-group"></div>
      <h3 class="mx-5">Are you sure you want to delete this manufacturer's entry?</h3>
      <input type="submit" value="Delete" class="btn btn-danger">
    </form>
  <% } %>  
</div>