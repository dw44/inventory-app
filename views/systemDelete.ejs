<div class="container my-5">
  <h1><%= title %> </h1>
  <h2><%= system.name %> </h2>
  <% if (units.length > 0) { %>
    <div class="mx-4 px-4 py-2">
      <h2>You need to delete the following system units from the inventory before you can delete this system:</h2>
    </div>
    <% Object.keys(units).forEach(key => { %>
      <div class="card mb-2 px-3 py-3">
        <h3 class="mx-2 my-2"><%= system.name %> - <%= units[key].region %> - <%= units[key].condition %></h3>
        <h4 class="mx-2 my-2">Price: $<%= units[key].price.toFixed(2) %></h4>
      </div>
    <% }) %>
  <% } else { %>
    <form action="" method="POST">
      <div class="form-group">
        <input type="hidden" id="id" name="id" class="form-control" value="<%= system._id %>" required>
      </div>
      <div class="form-group"></div>
      <h3 class="mx-5">Are you sure you want to delete this system entry?</h3>
      <input type="submit" value="Delete" class="btn btn-danger">
    </form>
  <% } %>  
</div>