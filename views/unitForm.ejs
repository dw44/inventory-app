<section class="container py-5">
  <h1><%= title %></h1>
  <form class="py-3" action="" method="POST">
    <div class="form-group">
      <label for="system">System:</label>
      <select class="form-control" name="system" id="system">
        <% Object.keys(systemList).forEach(key => { %>
          <option value="<%= systemList[key]._id %>"><%= systemList[key].name %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="condition">Condition:</label>
      <select class="form-control" name="condition" id="condition" required>
        <option value="New">New</option>
        <option value="Open-Box">Open Box</option>
        <option value="Refurbished">Refurbished</option>
        <option value="Used">Used</option>
        <option value="For-Parts">For Parts Only</option>
      </select>
    </div>
    <div class="form-group">
      <label for="region">Region:</label>
      <select class="form-control" name="region" id="region" required>
        <option value="NTSC-UC">NTSC-UC (US / Canada)</option>
        <option value="NTSC-J">NTSC-J (Japan / East Asia)</option>
        <option value="PAL">PAL (Europe / RoW)</option>
        <option value="Region-Free">Region Free</option>
      </select>
    </div>
    <div class="form-group">
      <label for="price">Price ($):</label>
      <input class="form-control" type="number" step="0.01" name="price" id="price" required">
    </div>
    <div class="form-group">
      <input class="btn btn-primary" type="submit" value="Submit" />
    </div>
  </form>
</section>
