<section class="container py-5">
  <h1><%= title %></h1>
  <form class="py-3" action="" method="POST">
    <div class="form-group">
      <label for="name">System Name:</label>
      <input class="form-control" type="text" name="name" required="true">
    </div>
    <div class="form-group">
      <label for="company">Manufacturer:</label>
      <select class="form-control" name="company" id="company" required="true">
        <% Object.keys(companyList).forEach(comp => { %>
          <option value="<%= companyList[comp]._id %>"><%= companyList[comp].name %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="released">Released:</label>
      <input class="form-control" type="number" name="released" id="released" min="1972" max="<%= new Date().getFullYear() %>">
    </div>
    <div class="form-group">
      <label for="generation">Generation:</label>
      <input class="form-control" type="number" name="generation" id="generation" min="1" max="8">
    </div>
    <div class="form-group">
      <label for="storageMedium">Manufacturer:</label>
      <select class="form-control" name="storageMedium" id="storageMedium">
        <option value="CD">CD</option>
        <option value="Cartridge">Cartridge</option>
        <option value="DVD">DVD</option>
        <option value="Blu Ray">Blu Ray</option>
        <option value="Proprietary Optical">Proprietary Optical Disc</option>
      </select>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
  </form>
</section>